CREATE TABLE IF NOT EXISTS WFH_Backlog (
    Req_ID INT NOT NULL,                           -- Foreign Key from WFH_Request
    Staff_ID INT NOT NULL,                         -- Foreign Key from Employee
    Sched_date DATE NOT NULL,                      -- Single scheduled date
    Session CHAR(2) CHECK (Session IN ('AM', 'PM')), -- 'AM' or 'PM' session
    Approved BOOLEAN NOT NULL DEFAULT FALSE,       -- Approval status for each date/session
    Rejected BOOLEAN NOT NULL DEFAULT FALSE,       -- Rejection status for each date/session
    Reason VARCHAR(100),                           -- Reason for approval/rejection
    FOREIGN KEY (Req_ID) REFERENCES WFH_Request(Req_ID) ON DELETE CASCADE,  -- Foreign Key to WFH_Request
    FOREIGN KEY (Staff_ID) REFERENCES Employee(Staff_ID) ON DELETE CASCADE, -- Foreign Key to Employee
    PRIMARY KEY (Req_ID, Staff_ID, Sched_date, Session) -- Composite Primary Key
);
