CREATE TABLE IF NOT EXISTS WFH_Request (
    Req_ID SERIAL PRIMARY KEY,                -- Primary Key with auto-increment
    Staff_ID INT NOT NULL,                    -- Foreign Key from Employee
    Req_date DATE NOT NULL,                   -- Date the request was made
    Approved BOOLEAN NOT NULL DEFAULT FALSE,  -- Overall approval status of the request
    Rejected BOOLEAN NOT NULL DEFAULT FALSE,  -- Overall rejection status of the request
    Reason VARCHAR(100),                      -- Reason for request
     UNIQUE (Staff_ID, Req_date),             -- Unique constraint on Staff_ID and Req_date
    FOREIGN KEY (Staff_ID) REFERENCES Employee(Staff_ID) ON DELETE CASCADE -- Foreign Key constraint
);

